# MongoDB Atlas Connection
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/nexuscrm

# Server Configuration
PORT=4000
NODE_ENV=production

# JWT Secrets (Use valores aleatórios fortes)
JWT_ACCESS_SECRET=your_strong_access_secret_key_here_min_32_chars
JWT_REFRESH_SECRET=your_strong_refresh_secret_key_here_min_32_chars
JWT_ACCESS_EXPIRES=15m
JWT_REFRESH_EXPIRES=7d

# CORS (URL do seu frontend em produção)
CORS_ORIGIN=https://projeto.kreativ.ae

# Email Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password
SMTP_FROM=noreply@seudominio.com

# OpenAI (optional)
OPENAI_API_KEY=your_openai_key

# Integrações (opcional)
WHATSAPP_API_URL=
WHATSAPP_TOKEN=
